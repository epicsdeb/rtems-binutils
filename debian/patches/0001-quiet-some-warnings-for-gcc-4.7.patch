index 90cd397..99749bf 100755
--- a/bfd/configure
+++ b/bfd/configure
@@ -12199,7 +12199,7 @@ fi
 
 NO_WERROR=
 if test "${ERROR_ON_WARNING}" = yes ; then
-    GCC_WARN_CFLAGS="$GCC_WARN_CFLAGS -Werror"
+    GCC_WARN_CFLAGS="$GCC_WARN_CFLAGS -Werror -Wno-error=unused-but-set-parameter -Wno-error=switch -Wno-error=unused-but-set-variable"
     NO_WERROR="-Wno-error"
 fi
 
